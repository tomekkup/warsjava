{
    "name"    : "warsjavaqx",

    "include" :
    [
    {
        "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
    ],

    "export" :
    [
    "api",
    "api-data",
    "build",
    "clean",
    "distclean",
    "fix",
    "info",
    "inspector",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "source-hybrid",    
    "simulation-build",
    "simulation-run",
    "test",
    "test-source",
    "translation"
    ],
  
    "default-job" : "build",

    "let" :
    {
        "APPLICATION"  : "warsjavaqx",
        "QOOXDOO_PATH" : "/qooxdoo",
        "QXTHEME"      : "warsjavaqx.theme.Theme",
        "QXICONTHEME"  : ["Oxygen"],
        "API_EXCLUDE"  : ["qx.test.*", "${APPLICATION}.theme.*", "${APPLICATION}.test.*", "${APPLICATION}.simulation.*"],
        "LOCALES"      : [ "en" ],
        "CACHE"        : "${TMPDIR}/qx${QOOXDOO_VERSION}/cache",
        "ROOT"         : ".",
        "BUILD_PATH"   : "../../../target/warsjavaqx-1.0/gui/"
    },

    "jobs" :
    {
        //"libraries" : 
